# ============================================
# CONFIGURACIÓN BOT WHATSAPP - EJEMPLO
# ============================================
# Copia este archivo a .env y configura tus valores

# ============================================
# INTELIGENCIA ARTIFICIAL - GROQ
# ============================================
GROQ_API_KEY=tu_api_key_aqui
GROQ_API_KEY_2=tu_segunda_key_opcional
GROQ_API_KEY_6=tu_tercera_key_opcional
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MAX_TOKENS=300
GROQ_TIMEOUT=60000
GROQ_ENABLED=true
ENABLE_GROQ_ROTATION=true

# ============================================
# WHATSAPP
# ============================================
WHATSAPP_NUMBER=573001234567
SESSION_PATH=./data/whatsapp-sessions
HEARTBEAT_INTERVAL=10000
RECONNECT_ATTEMPTS_MAX=100
RECONNECT_DELAY_BASE=500
RECONNECT_DELAY_MAX=60000
CONNECTION_TIMEOUT=60000
MESSAGE_QUEUE_SIZE=100

# ============================================
# SIMULACIÓN HUMANA
# ============================================
ENABLE_TYPING_SIMULATION=true
TYPING_SPEED_MIN=40
TYPING_SPEED_MAX=100
TYPING_DELAY_MIN=2000
TYPING_DELAY_MAX=4000
ENABLE_HUMAN_DELAYS=true

# ============================================
# BASE DE DATOS
# ============================================
DATABASE_URL=postgresql://usuario:password@localhost:5432/botwhatsapp
DATABASE_PROVIDER=postgresql

# ============================================
# INFORMACIÓN DEL NEGOCIO
# ============================================
BUSINESS_NAME=Tu Negocio
BUSINESS_ADDRESS=Tu Dirección
BOT_NAME=Tu Bot
BOT_PHONE=+57 300 123 4567
BUSINESS_PHONE=+57 300 123 4567
BUSINESS_EMAIL=tu@email.com
BOT_LANGUAGE=es

# ============================================
# MÉTODOS DE PAGO
# ============================================
NEQUI_NUMBER=3001234567
DAVIPLATA_NUMBER=3001234567
BANK_NAME=Bancolombia
BANK_ACCOUNT_TYPE=Ahorros
BANK_ACCOUNT_NUMBER=12345678901
BANK_ACCOUNT_HOLDER=Nombre Titular

# ============================================
# MERCADOPAGO
# ============================================
MERCADO_PAGO_ACCESS_TOKEN=tu_token_aqui
MERCADO_PAGO_PUBLIC_KEY=tu_public_key
MERCADOPAGO_ENABLED=false

# ============================================
# PAYPAL
# ============================================
PAYPAL_CLIENT_ID=tu_client_id
PAYPAL_CLIENT_SECRET=tu_client_secret
PAYPAL_MODE=sandbox
PAYPAL_EMAIL=tu@paypal.com
COP_TO_USD_RATE=4000

# ============================================
# ENTREGA
# ============================================
CASH_ON_DELIVERY_ENABLED=true
DELIVERY_ZONES=Bogotá,Medellín,Cali

# ============================================
# DROPSHIPPING - DROPI
# ============================================
DROPI_AGENT_TOKEN=tu_token_dropi
DROPI_API_URL=https://app.dropi.co/api/v1
DROPI_ENABLED=false
DROPSHIPPING_SHIPPING_MIN=15000
DROPSHIPPING_SHIPPING_MAX=20000
DROPSHIPPING_PROFIT_MIN=20000
DROPSHIPPING_PROFIT_MAX=30000

# ============================================
# CARACTERÍSTICAS
# ============================================
PHOTOS_ENABLED=true
AUDIO_ENABLED=true
SMART_PHOTOS_ENABLED=true
DYNAMIC_PRICING_ENABLED=true
ENABLE_CONVERSATION_MEMORY=true
CONVERSATION_MEMORY_TTL=86400000

# ============================================
# ADMINISTRACIÓN
# ============================================
ADMIN_EMAIL=admin@email.com
ADMIN_PASSWORD=cambiar_en_produccion

# ============================================
# LOGS Y MONITOREO
# ============================================
LOG_LEVEL=info
LOG_CONNECTION_EVENTS=true
LOG_RECONNECTION_EVENTS=true

# ============================================
# SERVIDOR
# ============================================
NODE_ENV=production
PORT=3000


# ============================================
# OPENAI - AUDIO E IMÁGENES
# ============================================
OPENAI_API_KEY=tu_openai_api_key_aqui

# Procesamiento de Audio
TTS_ENABLED=true
TTS_LANGUAGE=es
WHISPER_ENABLED=true

# Procesamiento de Imágenes
VISION_AI_ENABLED=true
OCR_ENABLED=true

# ============================================
# EMAIL SERVICE
# ============================================
# Gmail ejemplo (requiere App Password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password_aqui
FROM_EMAIL=tu_email@gmail.com
FROM_NAME=Bot WhatsApp

# Alternativas:
# SendGrid: smtp.sendgrid.net, puerto 587
# AWS SES: email-smtp.us-east-1.amazonaws.com, puerto 587
# Outlook: smtp-mail.outlook.com, puerto 587

# ============================================
# SISTEMA DE SUSCRIPCIONES
# ============================================
# Stripe (internacional)
STRIPE_SECRET_KEY=sk_test_tu_key_aqui
STRIPE_PUBLIC_KEY=pk_test_tu_key_aqui
STRIPE_WEBHOOK_SECRET=whsec_tu_secret_aqui
STRIPE_ENABLED=false

# Configuración de trials
TRIAL_DAYS=14
TRIAL_ENABLED=true

# ============================================
# LÍMITES POR DEFECTO (Plan Free)
# ============================================
DEFAULT_MESSAGE_LIMIT=100
DEFAULT_PRODUCT_LIMIT=10
DEFAULT_ORDER_LIMIT=20
DEFAULT_API_CALL_LIMIT=100

# ============================================
# NOTIFICACIONES
# ============================================
NOTIFY_ON_NEW_ORDER=true
NOTIFY_ON_PAYMENT=true
NOTIFY_ON_LIMIT_REACHED=true
NOTIFY_ON_SUBSCRIPTION_EXPIRING=true

# ============================================
# SEGURIDAD
# ============================================
JWT_SECRET=cambiar_en_produccion_usar_string_largo_y_aleatorio
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# URLS
# ============================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api

# ============================================
# FEATURES FLAGS
# ============================================
ENABLE_AUDIO_PROCESSING=true
ENABLE_IMAGE_ANALYSIS=true
ENABLE_PAYMENT_DETECTION=true
ENABLE_SUBSCRIPTION_SYSTEM=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_ACCESS=false
ENABLE_WEBHOOKS=true

# ============================================
# ANALYTICS
# ============================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# ============================================
# BACKUP
# ============================================
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups

# ============================================
# DESARROLLO
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_PAYMENTS=false
MOCK_EMAILS=false
